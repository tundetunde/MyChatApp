<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/toolbar_color"
    android:minHeight="?attr/actionBarSize">
    <RelativeLayout android:id="@+id/ac_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivChatProfile"
        android:layout_toEndOf="@+id/ivChatProfile"
        android:layout_toRightOf="@+id/ivChatProfile"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/vActionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivChatProfile"
        android:layout_alignLeft="@+id/textViewTitle"
        android:layout_alignStart="@+id/textViewTitle"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Hello World MSG"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/ivChatProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:background="@android:color/transparent"/>
</RelativeLayout>
</android.support.v7.widget.Toolbar>